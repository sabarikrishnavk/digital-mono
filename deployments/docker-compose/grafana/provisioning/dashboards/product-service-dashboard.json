{
  "uid": "product-service-dashboard-01",
  "title": "Product Service",
  "tags": ["product-service", "microservice"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 3,
  "refresh": "15s",
  "panels": [
    {
      "title": "Service Instances Up",
      "type": "stat",
      "id": 1,
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(up{job=\"product_service\"})",
          "legendFormat": "Running Instances",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "HTTP Requests Total (Rate 5m)",
      "type": "timeseries",
      "id": 2,
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 5 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"product_service\"}[5m])) by (method, path, status_code)",
          "legendFormat": "{{method}} {{path}} ({{status_code}})",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "title": "HTTP Request Duration p95 (5m)",
      "type": "timeseries",
      "id": 3,
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 5 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"product_service\"}[5m])) by (le, method, path))",
          "legendFormat": "p95 {{method}} {{path}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "unit": "s"
    },
    {
      "title": "Product Service API Requests by Code & Method (Rate 5m)",
      "type": "timeseries",
      "id": 4,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "sum by (code, method) (rate(product_service_api_http_requests_total{job=\"product_service\"}[5m]))",
          "legendFormat": "{{method}} - {{code}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "title": "Total HTTP Error Rate (4xx & 5xx)",
      "type": "stat",
      "id": 5,
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 22 },
      "targets": [
        {
          "expr": "sum(rate(product_service_api_http_requests_total{job=\"product_service\", code=~\"^[45]..\"}[5m]))",
          "legendFormat": "Error Rate",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.1 }
            ]
          },
          "mappings": [],
          "color": { "mode": "thresholds" }
        }
      }
    },
    {
      "title": "Request Rate by HTTP Method",
      "type": "timeseries",
      "id": 6,
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 22 },
      "targets": [
        {
          "expr": "sum by (method) (rate(product_service_api_http_requests_total{job=\"product_service\"}[5m]))",
          "legendFormat": "{{method}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "title": "API Request Counts by Code & Method (Total over range)",
      "type": "barchart",
      "id": 7,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 30 },
      "targets": [
        {
          "expr": "sum by (code, method) (increase(product_service_api_http_requests_total{job=\"product_service\"}[$__range]))",
          "legendFormat": "{{method}} - {{code}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "format": "table",
          "instant": false
        }
      ],
      "options": {
        "orientation": "auto",
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "multi"
        },
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false },
        "textMode": "auto"
      }
    }
  ]
}
